{
    "version": "0.1.0",
    "command": "clang++",
    "isShellCommand": true,
    "showOutput": "always",
    "args": [
        "clang",
        "${file}",
        "-o",
        "${file}.out",
        "&&",
        "./${file}.out"
    ],
    "problemMatcher": {
        "owner": "cpp",
        "fileLocation": [
            "relative",
            "${workspaceRoot}"
        ],
        "pattern": {
            "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "severity": 4,
            "message": 5
        }
    }
}